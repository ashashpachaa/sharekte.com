{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/spa",
  "serverlessFunctionRegion": "iad1",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 3008,
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "cache-control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
