{
  "buildCommand": "npm run build",
  "serverlessFunctionRegion": "iad1",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 3008,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "^/assets/(.*)$",
      "dest": "/dist/spa/assets/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(.*)$",
      "dest": "/api"
    }
  ]
}
